type Expenditure {
  id: String
  owner: String
  name: String
  amount: String
  date: String
  method: String
  budget_category: String
  reward_category: String
  comment: String
  created: String
  source: String
}

type Query {
  expenditure(since: String, until: String, count: Int): [Expenditure]
}

